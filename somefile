def generateEmployeeID(Doc):
    if type(Doc) == Doctor:
        baseID = "DOC/"
        numb = input("Please enter last three pin number to add to base pin: ")
        id = baseID + numb
        return id
    else: 
        baseID = "NUR/"
        numb = input("Please enter last three pin number to add to base pin: ")
        id = baseID + numb
        return id

